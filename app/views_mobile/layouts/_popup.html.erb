
<div id="background-grey"></div>

<div id="slide-more-groups" class="slide">
  <div class="slide-container">
    <div class="slide-header">
      <span class="header-title">Groups gestion</span>
      <div class="fa fa-close" id="close-popup"></div> 
    </div>
    <div class="slide-body">

      <!-- NOTIF -->
      <div class="slide-notif"></div>

      <!-- LEFT -->
      <div class="left-container">
        
        <!-- NEW GROUP -->
        <div class="new-name-group">
          <span class="actual-name-title">New group:</span>
          <span class="actual-name">Hello</span>
        </div>
        <%= text_field_tag :name, '', class: "hidden input-new-name-group" %>

        <!-- ADD USER -->
        <div class="added-member-list">
          <div class="member-added">
            <span class="fa fa-user"></span>
            <span class="user-name">Glouffi</span>
            <span class="fa fa-close delete-added-user"></span> 
          </div>
          <div class="member-added">
            <span class="fa fa-user"></span>
            <span class="user-name">Claire</span>
            <span class="fa fa-close delete-added-user"></span> 
          </div>
        </div>

        <div class="new-member">
          <span class="fa fa-user"></span>
          <%= text_field_tag :name, '', class: "user-name-add" %>
          
        </div>
      </div>
      
      <!-- RIGHT -->
      <div id="display-all-groups">
        <% current_groups.each do |group| %>
          <%= link_to user_group_calendar_path(current_user, group, group.calendar), class: "lateral-nav-element" do %>
            <object type="image/svg+xml" data="<%= asset_path 'group-pic.svg' %>" id="profile-pic"></object>
            <span class="group-name-sidebar" group_id="<%= group.id %>"><%= group.name %></span>
          <% end %>
        <% end %>
      </div>

    </div>
    <div class="slide-footer"></div>
  </div>
</div>



