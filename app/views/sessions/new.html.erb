<div class="container">
  <div class="row">
    <div class="col-md-12" id="plop">
      <p class="form-title">Sign In</p>
      <form accept-charset="UTF-8" action="/sessions" class="login" method="post">
        <%= form_for(:session, :url => sessions_path) do |f| %>
        <input type="text" placeholder="Email" class="field-input"
          <%= f.text_field :email %>
        <input type="password" placeholder="Password" class="field-input"
          <%= f.password_field :password %>
        <input type="submit" class="btn btn-success btn-sm" id="sign-in-submit-btn"
          <%= f.submit "sign in" %>
        <%end%>

        <div class="remember-forgot">
          <div class="row">
            <div class="col-md-6">
              <div class="checkbox">
                <label><input type="checkbox" id="booo" />Remember Me</label>
              </div>
            </div>
            <div class="col-md-6 forgot-pass">
              <a href="#">Forgot Password</a>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>


