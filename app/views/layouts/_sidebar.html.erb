						<span class="user-name"> <%= current_user.name %> </span>
						<span class="deco-options">
							<%= fa_icon("cog", class: "gear") %>
              <%= link_to fa_icon("power-off", class: "power-off"), signout_path, method: :delete, data: { confirm: "Are you sure?" }  %>
						</span>
        </div>
        <% if request.url =~ /groups(.*)/ %>
          <% if current_group_exists? %>
            <div id="active-group">
              <div class="panel panel-default" id="heading-group">
                <div class="panel-heading">
                  <%= image_tag "group-pic.png", class: "group-pic"%>
                  <!-- <span class="group&#45;pic"><img alt="group pic" src="#"></span> -->
                  <span class="group-name">Grid computing</span>
                </div>

                <div class="panel-body" id="nav-group">
