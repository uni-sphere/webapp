                    <%= nav_link_to fa_icon("wechat", text: "Chat"), root_path %>
                    <%= nav_link_to fa_icon("calendar", text: "Calendar"), user_group_calendar_path(current_user, current_group, group_calendar) %>
                    <!-- <li><a href="#"><%= fa_icon "folder&#45;open" %>drive</a></li> -->
                    <!-- <li><a href="#"><%= fa_icon "wechat" %>chat</a></li> -->
                    <!-- <li><a href="#"><%= fa_icon "calendar" %>calendar</a></li> -->
                  </ul>
                </div>
              </div>
            </div>
          <%end%>

          <div id="list-groups-wrapper">
            <div class="panel panel-default">
              <div class="panel-heading">
                <span> Groups </span>
              </div>
              <div class="panel-body">
                <ul class="nav" id="list-groups">
                  <% current_groups.each do |group| %>
