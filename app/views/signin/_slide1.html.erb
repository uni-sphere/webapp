<div class="slide story" id="slide-1" data-slide="1">

  <div class="welcome-wrapper">
    <div class="sign-in-toggle">Sign in</div>
    <div class="sign-in-selected">
      <div class="sign-in-notification">Wrong password</div>
        <form accept-charset="UTF-8" action="/signin" class="login" method="post">
          <%= form_for(:session, :url => signin_path) do |f| %>
            <%= f.text_field :email, class: "sign-in-input email", type:"text", placeholder: "Email Address" %>
            <%= f.password_field :password, type: "password", class:"sign-in-input psswd", placeholder: "Password" %>
            <%= f.submit "sign in", class: "sign-in-button"%>
          <% end %>
        </form>
    </div>
    <div class="welcome-title">
      <span class="main-title">Collaborative workspace for students</span>
      <span class="subtitle">Share, communicate and plan</span>
    </div>
  </div>
  <div class="sign-up-wrapper">
    <div class="sign-up">
      <%= form_for @user, :html => { :multipart => true } do |f| %>
        <%= f.text_field :email, type:"text", class:"sign-up-input", placeholder:"Email Address" %>
        <%= f.submit "Sign up for Free", class: "sign-up-button" %>
      <% end %>
    </div>
  </div>
  <div class="try-it-wrapper">
    <div class="try-it">
      <span class="try-it-text">Try it now!</span>
      <span class="fa fa-arrow-circle-o-right"></span>
    </div>
  </div>
</div>





